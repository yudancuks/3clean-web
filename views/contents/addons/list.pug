extends ../../layout

block pageStyles
  link(rel='stylesheet' href=`${baseUrl}/public/css/tableformat.css`)

block content
    .page-header
        a.btn.btn-gradient-primary.btn-fw(href=`${baseUrl}/dashboard/addons/create`) Create Add-Ons
        nav(aria-label='breadcrumb')
            ol.breadcrumb
                li.breadcrumb-item 
                    a(href=`${baseUrl}/dashboard`) Dashboard
                li.breadcrumb-item.active(aria-current='page') List Add-Ons
    .row
        .col-lg-12.grid-margin.stretch-card
            .card
                .card-body
                    table#productTable.table.table-responsive.table-hover.w-100
                        thead
                            tr
                                th ADD-ONS NAME
                                th TOTAL PRICE
                                th ACTIONS
                        tbody
                            each l in list
                                tr
                                    td= l.name
                                    td= l.totalPrice
                                    td.text-center
                                        a.btn.btn-primary.btn-sm(href=`/dashboard/addons/edit/${l._id}` title="Edit")
                                            i.mdi.mdi-grease-pencil 
                                        a.btn.btn-danger.btn-sm(href=`/dashboard/addons/delete/${l._id}` title="Delete" onclick="return confirm('Are you sure you want to delete this item?')") 
                                            i.mdi.mdi-delete
