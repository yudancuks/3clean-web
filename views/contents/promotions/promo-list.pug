extends ../../layout

block content
    .page-header
        a.btn.btn-gradient-primary.btn-fw(href=`${baseUrl}/promotions/promo-create`) Create Promo Banner
        nav(aria-label='breadcrumb')
            ol.breadcrumb
                li.breadcrumb-item 
                    a(href='#') Promotions
                li.breadcrumb-item.active(aria-current='page') Promo List
    .row
        .col-lg-12.grid-margin.stretch-card
            .card
                .card-body
                    table#productTable.table.table-hover.table-responsive
                        thead
                            tr
                                th TITLE
                                th SUB TITLE
                                th TEXT BUTTON
                                th LINK
                                th IMAGE
                                th ACTIONS
                        tbody
                            each promo in promos
                                tr
                                    td= promo.title
                                    td= promo.subtitle
                                    td= promo.textBtn
                                    td= promo.linkBtn
                                    td
                                        img(src=promo.image alt=promo.title style="width: 200px; height: 140px; border-radius:0")
                                    td.text-center
                                        a.btn.btn-primary.btn-sm(href=`/promotions/promo-edit/${promo._id}` title="Edit")
                                            i.mdi.mdi-grease-pencil 
                                        a.btn.btn-danger.btn-sm(href=`/promotions/promo-delete/${promo._id}` title="Delete" onclick="return confirm('Are you sure you want to delete this item?')") 
                                            i.mdi.mdi-delete


