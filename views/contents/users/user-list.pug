extends ../../layout

block content
    .page-header
        a.btn.btn-gradient-primary.btn-fw(href=`${baseUrl}/peoples/admin-create`) Create Admin
        nav(aria-label='breadcrumb')
            ol.breadcrumb
                li.breadcrumb-item 
                    a(href=`${baseUrl}/dashboard`) Dashboard
                li.breadcrumb-item.active(aria-current='page') User List
    .row
        .col-lg-12.grid-margin.stretch-card
            .card
                .card-body
                    table#productTable.table.table-hover
                        thead
                            tr
                                th FULL NAME
                                th EMAIL
                                //- th PASSWORD
                                th ACTIONS
                        tbody
                            each user in users
                                tr
                                    td= user.fullName
                                    td= user.emailAddress
                                    //- td= user.password
                                    td.text-center
                                        a.btn.btn-primary.btn-sm(href=`/peoples/admin-edit/${user._id}` title="Edit")
                                            i.mdi.mdi-grease-pencil 
                                        a.btn.btn-danger.btn-sm(href=`/peoples/admin-delete/${user._id}` title="Delete" onclick="return confirm('Are you sure you want to delete this item?')") 
                                            i.mdi.mdi-delete
