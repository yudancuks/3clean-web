doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Sign Up - 3Cleaning
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css")

  body(class="bg-gray-100 font-sans")
    div(class="min-h-screen flex")
      
      // Left Side: Form Section
      div(class="w-full md:w-1/2 flex items-center justify-center bg-white p-10")
        div(class="w-full max-w-md")

          // Logo Section
          div(class="flex items-center mb-6")
            img(src="/assets/images/landing/logo.svg" alt="Logo")


          h2(class="text-2xl font-bold mb-6") Sign In

          form#form-login
            // Email
            label(class="block text-sm font-medium mb-1") Email
            input(type="email", name="email",  placeholder="Input your active email", class="w-full border rounded px-3 py-2 mb-4 focus:outline-none focus:ring-2 focus:ring-blue-400" required)

            // Password
            label(class="block text-sm font-medium mb-1") Create Password
            input(type="password", name="password", placeholder="Create new password for your account", class="w-full border rounded px-3 py-2 mb-4 focus:outline-none focus:ring-2 focus:ring-blue-400" required)

            // Sign Up button
            button(type="submit", class="w-full bg-blue-700 text-white py-2 rounded font-semibold") Sign In

            // Login Link
            p(class="text-sm mt-4 text-center")
              | Have'nt Account yet?
              a(href="/user/register", class="text-blue-600 font-medium ml-1") Register

      // Right Side: Image and Text
      div(class="hidden md:flex w-1/2 bg-cover bg-center relative items-center justify-center" style="background-image: url('/assets/images/landing/signinbanner.png')")
        div(class="absolute inset-0 bg-black opacity-20 rounded-l-[40px]")
        div(class="relative p-10 text-center flex flex-col justify-end h-full")
          h1(class="text-4xl font-bold text-blue-700 mb-4")
            | WELCOME TO OUR 
            br
            | PRO-CLEANING COMPANY!
          p(class="text-sm text-white mb-2")
            | Expert Cleaning Solutions for Homes and Offices â€“ Trust Us to Make
            br
            | Every Corner Sparkle with Care and Precision!"

block pageScripts
    script(src=`${baseUrl}/public/js/forms/customer-login.js`) 